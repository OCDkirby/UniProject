<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:UniProject.ViewModels;assembly=UniProject"
             x:Class="UniProject.Views.BuildingPage"
             BackgroundColor="#121212">
    
    <!-- This context tells the layout that it will be working with a SchoolViewModel.
        It can be moved into higher or lower scopes as desired, 
        for instance if you wish to have a ListView bound to a BuildingViewModel but also require another binding
        context somewhere else-->

    <StackLayout Spacing="0">
        <!--header of page-->
        <!--Importing the school name so that it can be stylized appropriately-->
        <Label Text="{Binding SchoolNameFormatted}"
               MaxLines="2"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Center" 
               TextColor="DarkGray"
               FontSize="35"
               HorizontalTextAlignment="Center"
               Padding="0, 60,0, 10"
               FontAttributes="Bold"/>
        <!--Importing the school address so that it can be stylized appropriately-->
        <Label Text="{Binding SchoolAddressLabel}"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               MaxLines="2"
               Padding="0,20,0,10"
               HorizontalTextAlignment="Center"
               FontSize="25"
               TextColor="DarkGray"/>
        <!--apply now button-->
        <Frame
            CornerRadius="20"
            BackgroundColor="DarkOrange"
            Padding="1,0 "
            Margin="40,30">
        <Label Text="Apply Now"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               TextColor="DodgerBlue"
               FontAttributes="Bold"
               FontSize="25"
               Padding="130,0,130,0 "
               TextDecorations="Underline">
            <!--opens default browser to application url-->
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}"
                                      CommandParameter="{Binding SchoolUrlLabel}"/>
            </Label.GestureRecognizers>
            </Label>
        </Frame>
        
        <!-- line seperating header and footer-->
        <Line X1 = "-1000"
              X2 = "1000"
              Y1 = "0"
              Y2 = "0"
              Stroke="DarkGray"
              StrokeThickness="4"
            />
        <!-- Pulling in and displaying the list of buildings for the college-->
        <ListView x:Name="BuildingList"
                  ItemsSource="{Binding Buildings}"
                  SelectionMode="Single"
                  ItemTapped="BuildingClicked"
                  SelectedItem="{Binding Selected}"
                  VerticalScrollBarVisibility="Always"
                  RowHeight="60"
                  SeparatorVisibility="Default"
                  SeparatorColor="White"
                  HorizontalOptions="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <!--footer of page-->
                        <StackLayout>
                        <!-- displays rows of buildings that belong to the selected school -->
                        <Label Text="{Binding BuildingName}"
                               HorizontalOptions="StartAndExpand"
                               VerticalOptions="Center"
                               TextColor="DarkGoldenrod"
                               FontSize="Medium"
                               FontAttributes="Bold"
                               VerticalTextAlignment="Center"
                               Padding="0,15,0,15"
                               MaxLines="2"/>
                        </StackLayout>
                        
                    </ViewCell>
                    
                </DataTemplate>
                
            </ListView.ItemTemplate>
            
        </ListView>
        
    </StackLayout>
    
</ContentPage>